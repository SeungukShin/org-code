{
	"name": "org-code",
	"displayName": "org-code",
	"description": "Org Extension for Code",
	"icon": "emacs.png",
	"version": "0.0.1",
	"publisher": "SeungukShin",
	"repository": {
		"type": "git",
		"url": "https://github.com/SeungukShin/org-code"
	},
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:org"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "org",
				"extensions": [
					".org"
				],
				"aliases": [
					"Org"
				]
			}
		],
		"grammars": [
			{
				"language": "org",
				"scopeName": "source.org",
				"path": "./syntaxes/org.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "org-code.set.state",
				"title": "Org Code: Set State"
			}
		],
		"keybindings": [
			{
				"command": "org-code.set.state",
				"key": "ctrl+c ctrl+t"
			}
		],
		"configuration": [
			{
				"title": "Org for Code",
				"properties": {
					"org-code.logLevel": {
						"type": "string",
						"default": "E",
						"enum": [
							"E",
							"W",
							"I"
						],
						"enumDescriptions": [
							"Error",
							"Warning",
							"Information"
						]
					},
					"org-code.maxBuffer": {
						"type": "number",
						"default": 10,
						"description": "Max. buffer size for output from cscope in MB."
					},
					"org-code.todoState": {
						"type": "string",
						"default": "TODO WAIT"
					},
					"org-code.doneState": {
						"type": "string",
						"default": "DONE DROP"
					},
					"org-code.headLevel": {
						"type": "number",
						"default": 6,
						"description": "The head depth to support indent"
					},
					"org-code.updateDelay": {
						"type": "number",
						"default": 10,
						"description": "The delay time in ms to update decorations"
					},
					"org-code.indent": {
						"type": "boolean",
						"default": true,
						"description": "Indent head and body"
					},
					"org-code.fold": {
						"type": "boolean",
						"default": true,
						"description": "Folding based on head"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
